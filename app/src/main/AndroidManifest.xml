<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.rsschool.quiz">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Quiz.First">
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Quiz.First">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".SecActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Quiz.Second">

        </activity>

        <activity
            android:name=".ThrActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Quiz.Third">

        </activity>

        <activity
            android:name=".FourthActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Quiz.Fourth">

        </activity>

        <activity
            android:name=".FifthActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Quiz.Fifth">

        </activity>

        <activity
            android:name=".SixActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Quiz">

            <intent-filter>
                <action android:name="android.intent.action.SEND" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:mimeType="text/plain" />
            </intent-filter>

        </activity>

    </application>

</manifest>